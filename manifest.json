{
    "manifest_version": 3,
    "name": "Chat Dinger",
    "version": "2.0",
    "description": "Plays notification sounds when ChatGPT and Claude finish generating responses.",
    "permissions": [
      "storage",    
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "*://chat.openai.com/*",
      "*://chatgpt.com/*",
      "*://claude.ai/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "Chat Dinger Settings"
    },
    "content_scripts": [
      {
        "matches": [
          "*://chat.openai.com/*", 
          "*://chatgpt.com/*",
          "*://claude.ai/*"
        ],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "sounds/alert.mp3",
          "sounds/boop.wav",
          "sounds/ding.mp3",
          "sounds/hmm.mp3",
          "sounds/default.wav",
          "sounds/hidden_message.wav",
          "sounds/glitch.wav",
          "sounds/generating.wav",
          "sounds/cowbell.wav"
        ],
        "matches": [
          "*://chatgpt.com/*", 
          "*://chat.openai.com/*",
          "*://claude.ai/*"
        ]
      }
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}